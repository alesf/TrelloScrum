{
	"name": "Time tracking for Trello",
	"version": "1",
	"description": "Time tracking for Trello based on TrelloScrum found on https://github.com/Q42/TrelloScrum",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-2.0.3.min.js","trelloscrum.js"],
			"css": ["trelloscrum.css"]
		}
	],
	"manifest_version" : 2,
    "icons": { "128": "trello-scrum-icon.png" },
    "web_accessible_resources": [
	    "images/storypoints-icon.png",
	    "images/points-done.png"
    ]
}
